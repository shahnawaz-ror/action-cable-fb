<mt:include name="dialog/header.tmpl" page_title="<__trans phrase="Export Comments to DISQUS">">

<p><__trans phrase="This tool will import any existing Movable Type comments into the DISQUS Comments"></p>


<mt:if name="export_complete">

    <p><strong>Your comments have been queued for importing into DISQUS.  </strong></p>
        <div class="actions-bar">
    <div class="actions-bar-inner pkg actions">
        <a href="<mt:var name="return_url">" target="_top" class="primary-button"><__trans phrase="Close"></a>
    </div>
    </div>

<mt:else>


    <form method="post" action="<$mt:var name="script_url"$>">
        <input type="hidden" name="__mode" value="export_to_disqus" />
        <input type="hidden" name="blog_id" value="<$mt:var name="blog_id">" />
        <input type="hidden" name="magic_token" value="<mt:var name="magic_token">" />
        <input type="hidden" name="return_args" value="__mode=cfg_plugins&blog_id=<$mt:var name="blog_id">" />
        <input type="hidden" name="start_export" value="1" />

        <div class="actions-bar">
            <div class="actions-bar-inner pkg actions">
                <button
                    type="submit"
                    accesskey="s"
                    title="<__trans phrase="Continue (s)">"
                    class="primary-button"
                    ><__trans phrase="Import Comments into DISQUS"></button>
                <button
                    onclick="closeDialog(); return false"
                    type="submit"
                    accesskey="x"
                    class="cancel"
                    title="<__trans phrase="Cancel (x)">"
                    ><__trans phrase="Cancel"></button>
            </div>
        </div>
    </form>

</mt:if>

<mt:include name="dialog/footer.tmpl">
